<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <!-- Profile Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center_horizontal">

                <!-- Profile Picture -->
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profileImageView"
                    android:layout_width="112dp"
                    android:layout_height="112dp"
                    android:src="@drawable/ic_profile_placeholder"
                    app:civ_border_color="@color/primaryColor"
                    app:civ_border_width="2dp"
                    android:layout_gravity="center_horizontal" />

                <Button
                    android:id="@+id/uploadImageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Upload Image"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:cornerRadius="12dp"
                    android:textColor="@color/primaryColor" />

                <com.example.studybuddy.GradientTextView
                    android:id="@+id/nameTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/profile_name"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/emailTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/profile_email"
                    android:textSize="16sp"
                    android:textColor="@color/secondaryTextColor"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/yearTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/profile_year"
                    android:textSize="16sp"
                    android:textColor="@color/secondaryTextColor"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/branchTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/profile_branch"
                    android:textSize="16sp"
                    android:textColor="@color/secondaryTextColor"
                    android:gravity="center" />

                <Button
                    android:id="@+id/editProfileButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Edit Profile"
                    style="@style/Widget.MaterialComponents.Button"
                    app:cornerRadius="12dp"
                    app:backgroundTint="@color/primaryColor"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Goals & Achievements Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <com.example.studybuddy.GradientTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Study Goals &amp; Achievements"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/goalsTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="No goals set yet."
                    android:textSize="16sp"
                    android:textColor="@color/secondaryTextColor"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/achievementsTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="No achievements unlocked yet."
                    android:textSize="16sp"
                    android:textColor="@color/secondaryTextColor"
                    android:gravity="center" />

                <Button
                    android:id="@+id/setGoalsButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Set Study Goals"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:cornerRadius="10dp"
                    android:textColor="@color/primaryColor" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Feedback Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <com.example.studybuddy.GradientTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Help Us Improve"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Your feedback helps us make StudyBuddy better for everyone!"
                    android:textSize="16sp"
                    android:textColor="@color/secondaryTextColor"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/feedbackButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Send Feedback"
                    android:drawableStart="@drawable/ic_feedback"
                    android:drawablePadding="8dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:cornerRadius="10dp"
                    android:textColor="@color/primaryColor"
                    android:backgroundTint="@android:color/white" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</ScrollView>
