rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to lofi tracks
    match /lofi-tracks/{allPaths=**} {
      allow read: if true; // Public read access for streaming
      allow write: if request.auth != null; // Only authenticated users can upload
    }
    
    // Default rule for other files
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
